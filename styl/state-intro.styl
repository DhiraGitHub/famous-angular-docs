@import 'variables'

/***********************************************************************
  Intro State
***********************************************************************/

.state-intro
  text-align center

  a:hover
    text-decoration none

  .logo
    margin-bottom 20px

  .intro-heading
    h1
      font-weight bold
      font-size 80px
      color white

      .angular-text
        color #DA262E

  p
    font-size 30px
    line-height 28px
    color #EBF0F0
    margin-bottom 55px

  .links
    margin-bottom 20px

    a
      display block
      width 290px
      height 85px
      background-color white
      border-radius 5px
      padding-top 22px
      font-size 28px
      line-height 36px
      color #1B1F1F 
      margin 0 20px
      transition margin-top 0.3s ease, height 0.3s ease, background-color 0.3s ease

      .octicon
        display block
        font-size 40px
        margin-top 20px
        opacity 0
        transition opacity 0.3s ease

    &:hover
      a
        margin-top -20px
        height 135px
        background-color #10A0E6
        color #1B1E1E
        transition margin-top 0.3s ease, height 0.3s ease, background-color 0.3s ease

        .octicon
          opacity 1
          transition opacity 0.3s ease

  .intro-divider
    width 150px
    height 2px
    margin 0 auto 30px
    background -moz-linear-gradient(0% 50% 0deg,rgba(16, 160, 230, 1) 0%,rgba(218, 38, 46, 1) 100%)
    background -webkit-linear-gradient(0deg, rgba(16, 160, 230, 1) 0%, rgba(218, 38, 46, 1) 100%)
    background -webkit-gradient(linear,0% 50% ,100% 50% ,color-stop(0,rgba(16, 160, 230, 1) ),color-stop(1,rgba(218, 38, 46, 1) ))
    background -o-linear-gradient(0deg, rgba(16, 160, 230, 1) 0%, rgba(218, 38, 46, 1) 100%)
    background -ms-linear-gradient(0deg, rgba(16, 160, 230, 1) 0%, rgba(218, 38, 46, 1) 100%)

  .stars-forks
    font-family 'octicons'
    color white
    font-size 24px

    .left
      display inline-block
      margin-right 30px

    .right
      display inline-block

    .octicon
      font-size 26px
      margin-right 10px

  .scroll-message
    .scroll-to
      color #5C4554
      font-size 20px

    a
      font-size 48px
      font-weight lighter
      color #10A0E6

      a:hover
        color #10A0E6

  .built-by
    font-size 22px
    color #5C4554

    .link
      padding-bottom 5px
      border-bottom 2px solid #5C4554

    a
      color #5C4554

