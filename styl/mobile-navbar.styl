@import 'variables'

/***********************************************************************
  Mobile State Nav
***********************************************************************/

#viewport

  .set-nav-perspective
    perspective-origin 85% 50%
    perspective 1000px
    backface-visibility visible !important

    .menu-item
      padding-top 10px
      color $blue
      font-size 38px
      text-align center
      background white
      border-radius 10px
      backface-visibility visible !important

  .mobile-state-nav
    vertical-align top

    .menu-icon
      display inline-block
      padding 40px 50px
      vertical-align top
      color white

      .octicon
        font-size 60px
