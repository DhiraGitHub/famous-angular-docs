@import 'variables'

/****************************************************************
* Body / html
****************************************************************/

html, body
  height: 100%

body
  // Top navbar is fixed, so add padding to prevent content from going beneath
  padding-top: $navbar-height
  -webkit-font-smoothing: antialiased
  font-family 'AvenirNextLTW02-Regular', 'sans-serif'; 
  //background-color inherit !important;
  background #0c090d


.fill-width
  width: 100%

/****************************************************************
* General mobile
****************************************************************/

@media (max-width: 769px)
  h1
    font-size: 28px


/****************************************************************
* Main content area
****************************************************************/

.main-content
  padding: 48px

@media (max-width: 769px)
  .main-content
    padding: 20px 15px

/****************************************************************
* Utility classes
****************************************************************/

// For getting sidebar to expand 100% of height
.fill
  height: 100%
