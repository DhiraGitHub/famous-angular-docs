include state-nav

fa-modifier(
  fa-origin='[0, 0.1]'
)
  fa-modifier(fa-translate='content.translate()')
    fa-surface(fa-size="[500, true]")
      .content
        h1 Use core Angular directives like 
          span.header-code &lt;ng-repeat&gt; 

  fa-modifier(fa-translate='code.translate()')
    fa-surface(fa-size="[500, true]")
      .code
        p fa-surface

fa-modifier(fa-origin='[1, 0.1]', fa-translate='[0, 0, 0]', fa-size='[405, 250]')

  fa-modifier(
    ng-repeat='cat in cats'
    fa-translate='catTile.translate($index)'
  )
    fa-surface(
      fa-size='[200, 75]'
    ).cat-tile
      .left-col
        .cat-face
      .right-col
        .cat-name Raven Kidd
        .cat-location Seattle, WA

  fa-modifier(fa-translate='inputRange.translate()')
    fa-surface(
      fa-size='[undefined, true]'
    )
      div.repeat-slider-container
        input(type='range' min="1" max="8" ng-model='data.repeatCount').repeat-slider

include state-footer
