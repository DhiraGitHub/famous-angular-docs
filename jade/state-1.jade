  fa-translate='[800, 150, 0]'
  fa-size='[600, 375]'
)
  fa-modifier(fa-translate='example.frame.translate()')
    fa-surface
      .example-frame
  fa-modifier(fa-translate='example.header.translate()')
    fa-surface(fa-size='[560, 55]')
      .example-header
  fa-modifier(fa-translate='example.sidenav.translate()')
    fa-surface(fa-size='[75, 245]')
      .example-sidenav
  fa-modifier(fa-translate='example.container.translate()')
    fa-surface(fa-size='[470, 245]')
      .example-container
  fa-modifier(
    fa-translate='example.content.translate()'
    fa-opacity='example.content.opacity()'
    fa-scale='example.content.scale()'
  )
    fa-surface(fa-size='[420, 195]')
      .example-content
