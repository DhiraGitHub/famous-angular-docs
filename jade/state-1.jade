        p fa-surface
  fa-modifier(fa-translate='code.header.translate()')
    fa-surface(fa-size="[500, true]")
      .code
        p fa-surface
  fa-modifier(fa-translate='code.sidenav.translate()')
    fa-surface(fa-size="[500, true]")
      .code
        p fa-surface
  fa-modifier(fa-translate='code.container.translate()')
    fa-surface(fa-size="[500, true]")
      .code
